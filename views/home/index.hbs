{{> slider}}

<div class="movie-container">
    {{#each movies}}
    <div class="movie">
        <div>
            <h1 class="title">{{name}}</h1>
        </div>
        <div>
            <a href='/movie/{{_id}}'>
                <img src={{imageUrl}} />
            </a>
            <a href='/movie/{{_id}}' class="details-btn">Details</a>
        </div>
    </div>
    {{/each}}
</div>